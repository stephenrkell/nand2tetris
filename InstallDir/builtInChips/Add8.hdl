/**
 * 8-bit integer adder.  out = a + b where a,b are 8-bit 
 * 2's complement representations of integers.  Overflow is 
 * neither detected nor handled.
 */

CHIP Add8 {

    IN  a[8], b[8];
    OUT out[8];

    BUILTIN Add8;
}

